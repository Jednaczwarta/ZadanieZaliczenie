<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#B0C4DE">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dane Pracownika"
        android:textSize="20sp"/>
    
    <EditText
        android:id="@+id/nameET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Imię"/>

    <EditText
        android:id="@+id/surnameET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nazwisko"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stanowisko"/>

    <Spinner
        android:id="@+id/spin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generowanie hasła"
        android:textSize="20sp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/quantityET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ile znaków?"/>

    <CheckBox
        android:id="@+id/smallAndCapitalCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Małe i wielkie litery"/>

    <CheckBox
        android:id="@+id/numbersCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cyfry"/>

    <CheckBox
        android:id="@+id/specialLettersCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Znaki specjalne"/>

    <Button
        android:id="@+id/generatePassBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generuj hasło"
        android:layout_gravity="end"
        android:backgroundTint="#4682B4"/>

    <Button
        android:id="@+id/commitBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zatwierdź"
        android:backgroundTint="#4682B4"/>

</LinearLayout>